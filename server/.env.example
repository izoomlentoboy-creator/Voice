# TBVoice Server Configuration
# Copy to .env and adjust values

# Database (SQLite for dev, PostgreSQL for production)
TBVOICE_DATABASE_URL=sqlite:///./server/tbvoice.db

# Model settings
TBVOICE_MODEL_BACKEND=ensemble
TBVOICE_MODEL_MODE=binary

# Server
TBVOICE_HOST=0.0.0.0
TBVOICE_PORT=8000
TBVOICE_WORKERS=2
TBVOICE_DEBUG=false

# Rate limiting
TBVOICE_RATE_LIMIT=10

# Audio retention (days before cleanup)
TBVOICE_AUDIO_RETENTION_DAYS=30
